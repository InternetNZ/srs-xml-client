<NZSRSRequest VerMajor="{{ version_major }}" VerMinor="{{ version_minor }}">
  <ScheduleQry {% if process_name %} ProcessName="{{ process_name }}" {% endif %}
               {% if parameters %} Parameters="{{ parameters }}" {% endif %}>
    {% if active_on %}
      <ActiveOn Year="{{ active_on.year }}" Month="{{ active_on.month }}" Day="{{ active_on.day }}" Hour="{{ active_on.hour }}" Minute="{{ active_on.minute }}" Second="{{ active_on.second }}" {% if active_on.time_zone %} TimeZoneOffset="{{ active_on.time_zone }}" {% endif %}/>
    {% endif %}
    {% if first_run %}
      <FirstRunDate Year="{{ first_run.year }}" Month="{{ first_run.month }}" Day="{{ first_run.day }}" Hour="{{ first_run.hour }}" Minute="{{ first_run.minute }}" Second="{{ first_run.second }}" {% if first_run.time_zone %} TimeZoneOffset="{{ first_run.time_zone }}" {% endif %}/>
    {% endif %}
  </ScheduleQry>
</NZSRSRequest>
